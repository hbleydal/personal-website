---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<BaseLayout title="Resume" lang="en" description="Resume / CV.">
  <Header lang="en" />

  <main class="container cv-page">

    <section class="card">
      <div class="pdf-frame">
        <iframe
          src="/extended_cv_hbd.pdf#view=FitH"
          title="Resume (PDF)"
          loading="lazy"
        ></iframe>
      </div>
    </section>

    <hr />

    <section class="card download-section">
      <a class="pill" href="/extended_cv_hbd.pdf" download>
        Download PDF
      </a>
    </section>

  </main>

  <Footer lang="en" />
</BaseLayout>
